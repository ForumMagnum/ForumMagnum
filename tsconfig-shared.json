{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "rootDir": ".",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/lesswrong/*"],
      "@/allComponents": ["./packages/lesswrong/lib/allComponents.ts"]
    }
  },
  "include": [
    "packages/lesswrong",
    "public/lesswrong-editor/src/editorConfigs.js",
    "playwright"
  ],
  "exclude": [
    "node_modules",
    "packages/lesswrong/viteClient",
    "build"
  ],
  "ts-node": {
    "files": true
  }
}
