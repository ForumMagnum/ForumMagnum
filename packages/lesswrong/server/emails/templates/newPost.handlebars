<div class="heading">
  <h1>
    <a href="{{post.result.linkUrl}}" class="action-link">{{post.result.title}}</a>
  </h1>
  
  <hr></hr>
  
  <div class="postAuthor">
    <a href="{{post.result.user.pageUrl}}">{{post.result.user.displayName}}</a>
  </div>
  <div class="postDate">
    {{formatPostDate post.result.postedAt}}
  </div>
</div>

<br><br>

{{#if post.result.contents && post.result.contents.html}}
  <div class="post-body">
  {{{post.result.contents && post.result.contents.html}}}
  </div>
  <br>
{{/if}}

<a href="{{post.result.pageUrl}}">Discuss</a><br><br>

